{
  "extends": [
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "parser": "babel-eslint",
  "env": {
    "jest": true
  },
  "rules": {
    "func-names": ["error", "never"],
    "react/jsx-filename-extension": "off",
    "no-underscore-dangle": "off",
    "no-shadow": "warn",
    "jsx-a11y/href-no-hash": "off",
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "all"
    }]
  }
}